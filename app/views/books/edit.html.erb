<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion %>
    <%= f.text_area :opinion %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>


<%= link_to "Show", book_path(@book.id) %>
<span> | </span>
<%= link_to "Back", books_path %>