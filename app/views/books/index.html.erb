<%= form_with url: search_tag_path, method: :get do |f| %>
  <div>
    <%= f.text_field :word, class: "form-control col mx-2" %>
    <%= f.submit "検索", class: "btn btn-info" %>
  </div>
<% end %>
<%= render 'layouts/search_form' %>
<div class="container px-5 px-sm-0">

  <%= render "layouts/form_errors", model: @book %>
  <div class="row">

    <div class="col-md-3">
      <%= render 'layouts/section', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <div>
        <%= link_to '新しい順', books_path(order: 'new'), remote: true %>
          <span> | </span>
        <%= link_to '評価の高い順', books_path(order: 'high-score'), remote: true%>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th id="test">Title</th>
            <th>Opinion</th>
            <th colspan="3"><th>
          </tr>
        </thead>
        <!--非同期順番替えを行う部分をテンプレート化・id記入-->
        <tbody id="book_order_button">
          <%= render 'books/book_order', book: @books %>
        </tbody>
      </table>
    </div>

  </div>
</div>