<%= render 'layouts/search_form' %>
<div class="container px-5 px-sm-0">

  <%= render "layouts/form_errors", model: @book %>
  <div class="row">

    <div class="col-md-3">
      <%= render 'layouts/section', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <div>
        <%= link_to '新しい順', books_path %>
        <span> | </span>
        <%= link_to '評価の高い順', books_path(order: 'high-score') %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th id="test">Title</th>
            <th>Opinion</th>
            <th colspan="3"><th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <%= render 'book_table', book: book, size: 80 %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>