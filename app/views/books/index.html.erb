<%= render 'new', book: @book %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to users_show_path do %>
          <% image_tag book.user.get_image(100, 100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
    <% end %>
  </tbody>
</table>