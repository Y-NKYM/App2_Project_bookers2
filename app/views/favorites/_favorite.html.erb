<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), class: "favorite_yes", method: :delete, remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), class: "favorite_no", method: :post, remote: true do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>