<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>Books search for "<%= @word %>"</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <%= render 'books/book_table', book: book, size: 50 %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>