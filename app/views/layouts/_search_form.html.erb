<%= form_with url: search_path, local:true, method: :get do |f| %>
<!-- 検索フォームを中央に寄せる-->
<div class="container-fluid d-flex justify-content-center">
  <!-- フォームを横並び・全体の幅を変更-->
  <div class="form-row form-group col-8">
    <%= f.text_field :word, class: "form-control col mx-2" %>
    <%= f.select :range, options_for_select([['User'], ['Book']]), {}, class: "form-control col mx-2" %>
    <%= f.select :search,
      options_for_select([["完全一致","perfect_match"],
                          ["前方一致","forward_match"],
                          ["後方一致","backward_match"],
                          ["部分一致","partial_match"]]),
      {}, class: "form-control col mx-2" %>
    <%= f.submit "検索", class: "btn btn-info" %>
  </div>
</div>
<% end %>