<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <%= render "layouts/form_errors", model: @group %>
      <%= form_with model: @group do |f| %>
        <%= render 'groups/group_form', f: f %>
        <%= f.submit "Create Group", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>